{{!-- Create a table --}}
<table id="restaurant-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.restaurant_id}}</td>
            <td>{{this.location}}</td>
            <td>{{this.food_type}}</td>
            <td><button onclick="deleteRestaurant({{this.restaurant_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_restaurant.js"></script>


{{!-- Form to add a record to the table  --}}
<h2>Adding Data Using an HTML Form</h2>
<p>To add a new restaurant, please enter their information below nad click `Submit`!</p>
<form id="add-location-form" method="POST" action="/add-location-form">
    <label for="input-location">Location Name: </label>
    <input type="text" name="input-location" id="input-location">
    
    <label for="input-food-type">Food Type: </label>
    <input type="text" name="input-food-type" id="input-food-type">

    <input type="submit">
</form>

<h2>Search Using an HTML Form</h2>
<p>Search by location using the field below. Partial names are OK too!</p>
<form id="search-location-html" method='GET' action='/'>
    <label for="input-location">Search by Location: </label>
    <input type="text" name="location" id="input-location-html-search">

    <input type="submit">
    <a href='/'><button>Reset</button></a>
</form>

<h2>Updating Restaurant Form</h2>
<p>To update a specific restaurant select the name from the drop-down menu on the left and their desired food type from the drop down menu on the right</p>
<form id="update-restaurant-form-ajax">

    <label for="input-location">Location: </label>
    <select name="input-location" id="mySelect">
        <option value="test">Select a Location</option>
        {{#each data}}
        <option value="{{this.restaurant_id}}">{{this.location}}</option>
        {{/each}}
    </select>

    <label for="input-food-type-update">Food Type: </label>
    <input type="text" name="input-food-type-update" id="input-food-type-update">

    <input type="submit">

</form>

<script src="./js/update_restaurant.js"></script>